// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.154.2/containers/cpp
{
	"name": "TTK Development",
	"image": "topologytoolkit/ttk-dev:5.9.0",
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

	// filesystem mounts
	"mounts": [
		// replace SRC and DST as appropriate
		//"source=<SRC>,target=<TARGET>,type=bind,consistency=cached"
	],

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"remote.autoForwardPorts": false,

		"cmake.configureArgs": [
			"-DTTK_BUILD_DOCUMENTATION=OFF",
			"-DTTK_BUILD_PARAVIEW_PLUGINS=ON",
			"-DTTK_BUILD_STANDALONE_APPS=OFF",
			"-DTTK_BUILD_VTK_WRAPPERS=ON",
			"-DTTK_BUILD_VTK_PYTHON_MODULE=OFF",
			"-DTTK_ENABLE_OPENMP=ON",
			"-DTTK_ENABLE_KAMIKAZE=ON",
			"-DTTK_ENABLE_DOUBLE_TEMPLATING=ON"
		],

		"launch": {
			"configurations": [
				{
					"name": "(gdb) pvserver",
					"type": "cppdbg",
					"request": "launch",
					"program": "/usr/bin/pvserver",
					"args": [],
					"stopAtEntry": false,
					"cwd": "${workspaceFolder}",
					"environment": [
						{ 
							"name": "PV_PLUGIN_PATH", 
							"value": "${command:cmake.buildDirectory}/lib/TopologyToolKit" 
						},
						{
							"name": "LD_LIBRARY_PATH",
							"value": "${command:cmake.buildDirectory}/lib"
						}
					],
					"externalConsole": false,
					"MIMode": "gdb",
					"setupCommands": [
						{
							"description": "Enable pretty-printing for gdb",
							"text": "-enable-pretty-printing",
							"ignoreFailures": true
						}
					]
				},
				{
					"name": "(gdb) pvpython",
					"type": "cppdbg",
					"request": "launch",
					"program": "/usr/bin/pvpython",
					"stopAtEntry": false,
					"cwd": "${workspaceFolder}",
					"args": [ "test.py" ],
					"environment": [
						{ 
							"name": "PV_PLUGIN_PATH", 
							"value": "${command:cmake.buildDirectory}/lib/TopologyToolKit" 
						},
						{
							"name": "LD_LIBRARY_PATH",
							"value": "${command:cmake.buildDirectory}/lib"
						}
					],
					"externalConsole": false,
					"MIMode": "gdb",
					"setupCommands": [
						{
							"description": "Enable pretty-printing for gdb",
							"text": "-enable-pretty-printing",
							"ignoreFailures": true
						}
					]
				}
			]
		}
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"twxs.cmake"
	],

	"appPort": [
		11111
	]

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
}